<div class="container signup-form">
  <%= form_for(setup_signup(@signup)) do |f| %>
    <% if flash[:errors] %>
      <div class="error-explanation">
        <h4><%= pluralize(flash[:errors].count, "error") %> prohibited this signup from being saved:</h4>

        <ul>
        <% flash[:errors].each do |message| %>
          <li class="error"><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="new-signup signup-info">
      <p class="description">Information about you:</p>

      <div class="field">
        <%= f.label :first_name, "First Name" %><br>
        <%= f.text_field :first_name %>
      </div>
      <div class="field">
        <%= f.label :last_name, "Last Name" %><br>
        <%= f.text_field :last_name %>
      </div>
      <div class="field">
        <%= f.label :email, "Email" %><br>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :street_address, "Street Address" %><br>
        <%= f.text_field :street_address %>
      </div>
      <div class="field">
        <%= f.label :city, "City" %><br>
        <%= f.text_field :city %>
      </div>
      <div class="field">
        <%= f.label :state, "State" %><br>
        <%= f.text_field :state %>
      </div>
      <div class="field">
        <%= f.label :zip, "Zip Code" %><br>
        <%= f.text_field :zip %>
      </div>
      <div class="field">
        <%= f.label :contact_number, "Contact Number" %><br>
        <%= f.text_field :contact_number %>
      </div>
      <div class="field">
        <%= f.label :additional_donation, "Additional Donation Amount" %><br>
        <%= f.text_field :additional_donation %>
      </div>
    </div>
    
    <div class="new-signup players-info">
      <p class="description">Players' Information:</p>
      <% player_counter = 1 %>
      <%= f.fields_for :players do |ff| %>
        <div class="player-info-collection">
          <%= ff.label :player_first_name, "Player #{player_counter} First Name" %><br>
          <%= ff.text_field :player_first_name %>
        </div>
        <div>
          <%= ff.label :player_last_name, "Player #{player_counter} Last Name" %><br>
          <%= ff.text_field :player_last_name %> 
        </div>
        <% player_counter += 1 %>
      <% end %>


      <div class="actions waves-effect waves-light btn-large players-signup-button">
        <%= f.submit "Add players" %>
      </div>
    </div>
  <% end %>

</div>