<div class="container player-reg-info">
  <h1 class="center-align reg-info">Please update your information:</h1>
</div>

<div class="container signup-form">
  <%= form_for(@signup) do |f| %>
    <div class="user-action signup-info">
      <p class="description">Information about you:</p>
      <div class="field">
        <%= f.label :first_name, "Your First Name", class: "form-label" %><br>
        <%= f.text_field :first_name, class:"form-control" %>
      </div>
      <div class="field">
        <%= f.label :last_name, "Your Last Name", class: "form-label" %><br>
        <%= f.text_field :last_name, class:"form-control" %>
      </div>
      <div class="field">
        <%= f.label :company_name, "Company Name", class: "form-label" %><br>
        <%= f.text_field :company_name %>
      </div>
      <div class="field">
        <%= f.label :email, "Email", class: "form-label" %><br>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :street_address, "Your Street Address", class: "form-label" %><br>
        <%= f.text_field :street_address %>
      </div>
      <div class="field">
        <%= f.label :city, "Your City", class: "form-label" %><br>
        <%= f.text_field :city %>
      </div>
      <div class="field">
        <%= f.label :state, "Your State", class: "form-label" %><br>
        <%= f.text_field :state %>
      </div>
      <div class="field">
        <%= f.label :zip, "Your Zip", class: "form-label" %><br>
        <%= f.text_field :zip %>
      </div>
      <div class="field">
        <%= f.label :contact_number, "Contact Number", class: "form-label" %><br>
        <%= f.text_field :contact_number %>
      </div>
      <div class="field">
        <%= f.label :additional_donation, "Additional Donation Amount", class: "form-label" %><br>
        <%= f.text_field :additional_donation %>
      </div>
    </div>
  </div>

  <div class="user-action players-info">
    <% if @signup.players.count > 0 %>
      <p class="description">Players' Information:</p>
        <% player_counter = 1 %>
        <%= f.fields_for :players do |ff| %>
          <div class="player-info-collection">
            <%= ff.label :player_first_name, "Player #{player_counter} First Name", class: "form-label" %><br>
            <%= ff.text_field :player_first_name %>
          </div>
          <div class="player-info-collection">
            <%= ff.label :player_last_name, "Player #{player_counter} Last Name", class: "form-label" %><br>
            <%= ff.text_field :player_last_name %>
          </div>
          <% player_counter += 1 %>
        <% end %>

    <% elsif @signup.diners.count > 0 %>
      <p class="description">Diners' Information:</p>
      <% diner_counter = 1 %>
      <%= f.fields_for :diners do |ff| %>
        <div class="player-info-collection">
          <%= ff.label :diner_first_name, "Diner #{diner_counter} First Name", class: "form-label" %><br>
          <%= ff.text_field :diner_first_name %>
        </div>
        <div class="player-info-collection">
          <%= ff.label :diner_last_name, "Diner #{diner_counter} Last Name", class: "form-label" %><br>
          <%= ff.text_field :diner_last_name %>
        </div>
        <% diner_counter += 1 %>
      <% end %>

    <% else %>
      <p class="description">Sponsorship Opportunities:</p>
      <%= f.fields_for :sponsorship do |ff| %>
        <div class="player-info-collection">
          <%= ff.check_box :buffet %>
          <%= ff.label :buffet, "$1,200 Buffet Sponsorship", class: "form-label" %><br>
        </div>
        <div class="player-info-collection">  
          <%= ff.check_box :beverage_cart %>
          <%= ff.label :beverage_cart, "$1,000 Beverage Cart Sponsorship", class: "form-label" %><br>
        </div>
        <div class="player-info-collection">
          <%= ff.check_box :at_the_turn %>
          <%= ff.label :at_the_turn, "$500 At the Turn Sponsorship", class: "form-label" %><br>
        </div>
        <div class="player-info-collection"> 
          <%= ff.check_box :closest_to_pin %>
          <%= ff.label :closest_to_pin, "$250 Closest to the Pin Sponsorship", class: "form-label" %><br>
        </div>
        <div class="player-info-collection">  
          <%= ff.check_box :longest_drive %>
          <%= ff.label :longest_drive, "$250 Longest Drive Sponsorship", class: "form-label" %><br>
        </div>
        <p class="form-label">Tee Box Signs:</p>
        <div class="player-info-collection">
            <%= ff.check_box :tee_box_1, class: "tee" %>
            <%= ff.label :tee_box_1, "$250 Tee box sign", id: "tee1", class: "form-label" %><br>
          </div>
          <div class="player-info-collection">
            <%= ff.check_box :tee_box_2, class: "tee" %>
            <%= ff.label :tee_box_2, "$400 Tee box sign + 1", id: "tee2", class: "form-label" %><br>
          </div>
          <div class="player-info-collection">
            <%= ff.check_box :tee_box_3, class: "tee" %>
            <%= ff.label :tee_box_3, "$550 Tee box sign + 2", id: "tee3", class: "form-label" %><br>
          </div>
          <div class="player-info-collection">
            <%= ff.check_box :tee_box_4, class: "tee" %>
            <%= ff.label :tee_box_4, "$700 Tee box sign + 3", id: "tee4", class: "form-label" %><br>
          </div>
          <div class="player-info-collection">
            <%= ff.check_box :tee_box_5, class: "tee" %>
            <%= ff.label :tee_box_5, "$850 Tee box sign + 4", id: "tee5", class: "form-label" %><br>
          </div>
        <% end %>
      <% end %>
      <div class="actions waves-effect waves-light btn-large confirm players-signup-button">
        <%= f.submit "Confirm Signup Information" %>
      </div>
    </div>

    </div>
  <% end %>