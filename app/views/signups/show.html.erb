<div class="signup-summary">
  <h2 class="center-align">Thank you for your registration!</h2>
  <h2 class="center-align">Please confirm the following information:</h2>
</div>

<div class="container signup-confirmation">
  <h3 class="signup-header">Your information:</h3>
  <ul>
    <li class="confirm-info"><%= "#{@signup.first_name} #{@signup.last_name}" %></li>
    <li class="confirm-info"><%= @signup.email %></li>
    <li class="confirm-info"><%= @signup.contact_number %></li>
    <li class="confirm-info"><%= "#{@signup.street_address}, #{@signup.city}, #{@signup.state}  #{@signup.zip}" %></li>
  </ul>
</div>

<div class="container signup-confirmation">
  <% if @signup.players.count > 0 %>
  <h3 class="signup-header">Players' names:</h3>
    <ul>
    <% player_count = 1 %>
    <% @signup.players.each do |player| %>
        <li class="confirm-info">Player <%= player_count %>: <%= "#{player.player_first_name} #{player.player_last_name}" %></li>
      <% player_count += 1 %>
    <% end %>
    </ul>
  <% elsif @signup.diners.count > 0 %>
  <h3 class="signup-header">Diners' names:</h3>
    <ul>
    <% diner_count = 1 %>
    <% @signup.diners.each do |diner| %>
        <li class="confirm-info">Diner <%= diner_count %>: <%= "#{diner.diner_first_name} #{diner.diner_last_name}" %></li>
      <% diner_count += 1 %>
    <% end %>
    </ul>
  <% elsif @signup.sponsorship %>
  <h3 class="signup-header">Sponsorships selected:</h3>
    <ul>
    <% @signup.sponsorship.selected_sponsorships.each do |sponsorship| %>
      <% if sponsorship.length > 0 %>
        <li class="confirm-info"><%= sponsorship %></li>
      <% end %>
    <% end %>
    </ul>
  <% end %>
</div>

<div class="container signup-confirmation">
  <h3 class="signup-header">Total donation amount:</h3>
  <ul>
  <% if @signup.players.count > 0 %>
    <li class="confirm-info">Total for players: $<%= @signup.players.count * 150 %></li>
  <% end %>
    <li class="confirm-info">Additional donation: $<%= @signup.additional_donation %></li>
    <li id="total-donation">TOTAL DONATION $<%= @signup.total %></li>
  </ul>
</div>

<div class="center-align buttons">
  <%= link_to "edit signup information", edit_signup_path(@signup), class: "waves-effect waves-light btn-large" %><br>
  <%= link_to "confirm", users_show_path, class: "waves-effect waves-light btn-large" %>
</div>

